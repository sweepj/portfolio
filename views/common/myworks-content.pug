- var images = ['slider-img1.png', 'slider-img2.png', 'slider-img3.png']

section.section.my-works
  .triangle.triangle__fill_lightbeige.my-works__triangle
    svg(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 500 50" preserveaspectratio="none" class="triangle-main")
      polygon(class="left" points="0,0   0,86   500.8,86   500.8,75.5")
      polygon(class="right" points="500,0   500,86   0,86   0,75.5")
  .my-works__title
    svg(class="my-works__title-img" width="100%" height="100%")
      use(xlink:href='./images/icons/sprite.svg#works_header')
    h1.my-works__title-text.title Мои работы
  .my-works__slaider
    .my-works__left
      .my-works__left-title.title Сайт школы онлайн образования
      .my-works__left-desc HTML, CSS, JAVASCRIPT
      a(class="my-works__left-link main-btn" href="#")
        span.my-works__left-img
          svg(class="my-works__left-icon" width="25" height="25")
            use(xlink:href='./images/icons/sprite.svg#link')
        span.my-works__left-text Посмотреть сайт
    .my-works__right
      .my-works__right-slaider
        .slaider__main
          //ul.slaider__list
          //  each image, index in images
          //    li(class=`slaider__item ` + ((index === 0) ? `slaider__item-active` : ''))
          //      img(src=`./images/content/${image}`, alt="left slaider" class="slaider__img slaider__img-left")
          img(src="./images/content/slider-img1.png", alt="main slaider" class="slaider__img slaider__img-main")
        .slaider__other
          a(class="slaider__left")
            ul.slaider__list
              each image, index in images
                li(class=`slaider__item ` + ((index === 0) ? `slaider__item-active` : ''))
                  img(src=`./images/content/${image}`, alt="left slaider" class="slaider__img slaider__img-left")
          a(class="slaider__right")
            ul.slaider__list
              each image, index in images
                li(class=`slaider__item ` + ((index === 0) ? `slaider__item-active` : ''))
                  img(src=`./images/content/${image}`, alt="left slaider" class="slaider__img slaider__img-left")

    